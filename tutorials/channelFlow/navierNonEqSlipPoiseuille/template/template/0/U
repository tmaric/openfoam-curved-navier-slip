FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    topWall
    {
        type            navierSlip;
        value           uniform (0 0 0);
        slipLength      uniform !@Lp@!;
        wallVelocity    uniform (0 0 0);
    }

    bottomWall 
    {
        type            navierSlip;
        value           uniform (0 0 0);
        slipLength      uniform !@Lm@!;
        wallVelocity    uniform (0 0 0);
    }

    inFlow 
    {
        type            zeroGradient;
    }

    outFlow
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }
}

// ************************************************************************* //
